{
  "name": "eslint-config-ts-recommended",
  "description": "An ESLint shareable config for NodeJS and React projects using Typescript",
  "version": "1.0.13",
  "author": "Maycon Sousa <mayconfsousa@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/mayconfsousa/eslint-config-ts-recommended",
  "keywords": [
    "eslint",
    "typescript",
    "node",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mayconfsousa/eslint-config-ts-recommended.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint \"**/*.js\" --fix"
  },
  "peerDependencies": {
    "eslint": "^6.8.0",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": "eslint:recommended"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,css,less,scss,ts,tsx,md}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx}": [
      "eslint --fix --max-warnings 0"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
