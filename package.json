{
  "name": "eslint-config-ts-recommended",
  "description": "An ESLint shareable config for NodeJS and React projects using Typescript",
  "version": "1.0.20",
  "author": "Maycon Sousa <mayconfsousa@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/mayconfsousa/eslint-config-ts-recommended",
  "keywords": [
    "eslint",
    "typescript",
    "node",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mayconfsousa/eslint-config-ts-recommended.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint \"**/*.js\" --fix"
  },
  "peerDependencies": {
    "eslint": ">= 7",
    "prettier": ">= 2",
    "typescript": ">= 3"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.4.0",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "prettier": "^2.0.5",
    "typescript": "^3.9.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": "eslint:recommended"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,css,less,scss,ts,tsx,md}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx}": [
      "eslint --fix --max-warnings 0"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
